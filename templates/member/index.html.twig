{% extends 'base.html.twig' %}

{% block title %}Liste des Membres{% endblock %}

{% block body %}

    <div class = "container">
            <div align = 'right'>
            <a href="{{ path('member_new') }}"><i class="fa fa-plus"></i><button type = ""class="btn btn-outline btn-success pull-left"> Nouvel ajout</button></a>
            <br>
         </div>
        <h3 align = 'center'>Liste des Membres</h3>
         
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
                <th>Id</th>
                <th scope = "col">Prénom</th>
                <th scope = "col">Nom</th>
                <th scope = "col">Date de naissance</th>
                <th scope = "col">Genre</th>
                <th scope = "col" >situationFamiliale</th>
                <th scope = "col" >Phone</th>
                <th scope = "col">Section Dahira</th>
                <th scope = "col">Address</th>
                <th scope = "col">Annee d'adhésion</th>
                <th scope = "col">Image</th>
                <th scope = "col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.firstname }}</td>
                <td>{{ member.lastname }}</td>
                <td>{{ member.datenaiss ? member.datenaiss|date('d/m/Y') : '' }}</td>
                <td>{{ member.genre }}</td>
                <td>{{ member.situationFamiliale }}</td>
                <td>{{ member.phone }}</td>
                <td>{{ member.structure }}</td>
                <td>{{ member.address }}</td>
                <td>{{ member.anneeAdhesion ? member.anneeAdhesion|date('Y') : '' }}</td>
                <td>
                <img src="{{ asset("images/member/" ~ member.imageName) }}" alt="" width="64" height="64">
                </td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i>show</a>
                    <a href="{{ path('member_edit', {'id': member.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
    </div>
    <a class="btn btn-xs btn-success" href="{{ path('member_new') }}"><i class="fa fa-plus" aria-hidden="true"></i>Nouvel ajout</a>
{% endblock %}

