<div class="p-3 mb-2 .bg-dark text-white">
<div class="card card-8">
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_label(form.firstname, "Prénom") }}
                <span class="text-danger">*</span>
                {{ form_errors(form.firstname) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.lastname, "Nom") }}
                <span class="text-danger">*</span>
                {{ form_errors(form.lastname) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
    </div>
    <div class="form-row"> 
            <div class="form-group col-md-6">
                {{ form_label(form.datenaiss, "Date de Naissance") }}
                <span class="text-danger">*</span>
                {{ form_errors(form.datenaiss) }}
                {{ form_widget(form.datenaiss, {'attr': {'class': 'form-control'}}) }}
            </div>      
            <div class="form-group col-md-6">
                {{ form_label(form.genre, "Genre") }}
                <span class="text-danger">*</span>
                {{ form_errors(form.genre) }}
                {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
            </div>
    </div> 
    <div class="form-row"> 
            <div class="form-group col-md-4">
                {{ form_label(form.situationFamiliale, "Situation Familliale") }}
                {# Affichage des erreurs du champs. #}
                {{ form_errors(form.situationFamiliale) }}
                {# Génération de l'input. #}
                {{ form_widget(form.situationFamiliale, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group col-md-4">
                {{ form_label(form.phone, "Telephone 1") }}
                {{ form_errors(form.phone) }}
                {{ form_widget(form.phone, {'id': 'phone', 'attr': {'class': 'form-control'}}) }}
            </div> 
            <div class="form-group col-md-4">
                {{ form_label(form.autrephone, "Telephone 2") }}
                {{ form_errors(form.autrephone) }}
                {{ form_widget(form.autrephone, {'id': 'autrephone', 'attr': {'class': 'form-control'}}) }}
            </div> 
    </div>
    <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_label(form.anneeAdhesion, "Année d'ahdésion") }}
                <span class="text-danger">*</span>
                {# Affichage des erreurs du champs. #}
                {{ form_errors(form.anneeAdhesion) }}
                {# Génération de l'input. #}
                {{ form_widget(form.anneeAdhesion, {'attr': { 'class': 'form-control' }}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.structure, "Section Dahira / structure") }}
                <span class="text-danger">*</span>
                {# Affichage des erreurs du champs. #}
                {{ form_errors(form.structure) }}
                {# Génération de l'input. #}
                {{ form_widget(form.structure, {'attr': { 'class': 'form-control' }}) }}
            </div>
    </div>
    <div class="form-row"> 
            <div class="form-group col-md-6">
                {{ form_label(form.address, "Adresse") }}
                <span class="text-danger">*</span>
                {# Affichage des erreurs du champs. #}
                {{ form_errors(form.address) }}
                {# Génération de l'input. #}
                {{ form_widget(form.address, {'attr': {'class': 'form-control', 'rows': '2'}}) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.imageFile, "Joindre une image") }}
                <span class="text-danger">*</span>
                {{ form_errors(form.imageFile) }}
                {{ form_widget(form.imageFile) }}
            </div>
    </div>

        <br>
        <div>
        <button type="submit" class="btn btn-outline btn-success pull-left">{{ button_label|default('Enregistrer') }}</button>    
        </div> 
        {{ form_rest(form) }}
        {{ form_end(form) }}
</div>   
</div>