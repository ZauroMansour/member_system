{% extends 'base.html.twig' %}

{% block title %}Liste des Membres{% endblock %}

{% block body %}
    <h3 align = 'center'>Informations détaillées de {{ member.firstname }} {{ member.lastname }}</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ member.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ member.lastname }}</td>
            </tr>
            <tr>
                <th>Date de Naissance</th>
                <td>{{  member.datenaiss ? member.datenaiss|date('d/m/Y') : ''  }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ member.genre }}</td>
            </tr>
            <tr>
                <th>situationFamiliale</th>
                <td>{{ member.situationFamiliale }}</td>
            </tr>
            <tr>
                <th>Section Dahira</th>
                <td>{{ member.structure }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ member.phone }}</td>
            </tr>
            <tr>
                <th>Autre Phone</th>
                <td>{{ member.autrephone }}</td>
            </tr>
            <tr>
                <th>AnneeAdhesion</th>
                <td>{{ member.anneeAdhesion ? member.anneeAdhesion|date('Y') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ member.address }}</td>
            </tr>
            <tr>
                <th>Image Profil</th>
                <td><img src="{{ asset("images/member/" ~ member.imageName) }}" alt="" width="200" height="150"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('member_index') }}">Retour à la liste</a>

    <a href="{{ path('member_edit', {'id': member.id}) }}"><i class="fa fa-edit"></i>edit</a>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
